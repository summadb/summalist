{
  "name": "summalist",
  "version": "0.0.1",
  "description": "Infinitely nested shareable lists on SummaDB.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/summadb/summalist.git"
  },
  "keywords": [
    "summadb",
    "list",
    "todo",
    "checklist"
  ],
  "author": "Giovanni T. Parra",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/summadb/summalist/issues"
  },
  "homepage": "https://github.com/summadb/summalist#readme",
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@cycle/isolate": "^1.4.0",
    "@cycle/most-run": "^3.0.1",
    "@most/hold": "^1.3.0",
    "@motorcycle/dom": "^2.0.1",
    "class-set": "0.0.4",
    "cuid": "^1.3.8",
    "envify": "^3.4.1",
    "fwitch": "^1.0.1",
    "immutable": "^3.8.1",
    "most": "^0.19.7"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "11.0.1",
    "browserify-incremental": "^3.0.1",
    "immutable-devtools": "0.0.7"
  },
  "scripts": {
    "style": "stylus src/style.styl -o dist/style.css",
    "live": "find src/*.js -type f | grep -v 'swp' | entr fish -c 'npm run build-dev; and echo \"done!\"'",
    "build-dev": "DEBUG=true browserifyinc src/main.js --outfile dist/main.js",
    "build-prod": "browserify src/main.js --outfile dist/main.js && cp src/index.html dist/",
    "predeploy": "npm run build-prod && cp src/index.html dist/ && cp -r static dist/"
  }
}
